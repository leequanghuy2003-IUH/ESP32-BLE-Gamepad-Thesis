<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:keepScreenOn="true">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_header_rounded_bottom"
        android:gravity="center"
        android:text="GAMEPAD TESTER"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/btnHistory"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:src="@drawable/ic_history"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:elevation="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="⇦ THOÁT"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:elevation="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/btnL1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_button_surface"
        android:gravity="center"
        android:text="L1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1565C0"
        android:alpha="1.0"
        android:elevation="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/btnL2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_button_surface"
        android:gravity="center"
        android:text="L2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1565C0"
        android:alpha="1.0"
        android:elevation="4dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnL1"
        app:layout_constraintStart_toStartOf="@id/btnL1"/>

    <TextView
        android:id="@+id/btnL3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_button_surface"
        android:gravity="center"
        android:text="L3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1565C0"
        android:alpha="1.0"
        android:elevation="4dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/btnL1"
        app:layout_constraintTop_toTopOf="@id/btnL1"
        app:layout_constraintBottom_toBottomOf="@id/btnL2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dpadContainer"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnL2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btnL3">

        <Space
            android:id="@+id/centerAnchor"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/btnDpadUp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/dpad_vertical_outline"
            android:gravity="center"
            android:alpha="0.6"
            android:elevation="2dp"
            app:layout_constraintBottom_toTopOf="@id/centerAnchor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/btnDpadDown"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="2dp"
            android:rotation="180"
            android:background="@drawable/dpad_vertical_outline"
            android:gravity="center"
            android:alpha="0.6"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/centerAnchor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/btnDpadLeft"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/dpad_horizontal_outline"
            android:gravity="center"
            android:alpha="0.6"
            android:elevation="2dp"
            app:layout_constraintEnd_toStartOf="@id/centerAnchor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/btnDpadRight"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="2dp"
            android:rotation="180"
            android:background="@drawable/dpad_horizontal_outline"
            android:gravity="center"
            android:alpha="0.6"
            android:elevation="2dp"
            app:layout_constraintStart_toEndOf="@id/centerAnchor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/btnR1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_button_surface"
        android:gravity="center"
        android:text="R1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1565C0"
        android:alpha="1.0"
        android:elevation="4dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/btnR2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_button_surface"
        android:gravity="center"
        android:text="R2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1565C0"
        android:alpha="1.0"
        android:elevation="4dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnR1"
        app:layout_constraintStart_toStartOf="@id/btnR1"/>

    <TextView
        android:id="@+id/btnR3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_button_surface"
        android:gravity="center"
        android:text="R3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1565C0"
        android:alpha="1.0"
        android:elevation="4dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@id/btnR1"
        app:layout_constraintTop_toTopOf="@id/btnR1"
        app:layout_constraintBottom_toBottomOf="@id/btnR2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/abxyContainer"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnR2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/btnR3">

        <TextView
            android:id="@+id/btnTriangle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_button_circle_surface"
            android:gravity="center"
            android:text="Y"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/btnCross"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_button_circle_surface"
            android:gravity="center"
            android:text="A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/btnSquare"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_button_circle_surface"
            android:gravity="center"
            android:text="X"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/btnCircle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_button_circle_surface"
            android:gravity="center"
            android:text="B"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/centerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintBottom_toTopOf="@id/leftJoystick"
        app:layout_constraintStart_toEndOf="@id/btnL3"
        app:layout_constraintEnd_toStartOf="@id/btnR3">

        <TextView
            android:id="@+id/btnShare"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_button_pill_surface"
            android:gravity="center"
            android:text="SELECT"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:elevation="4dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/btnPS"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/bg_button_circle_surface"
            android:gravity="center"
            android:text="MODE"
            android:textSize="16sp"
            android:textColor="#1565C0"
            android:textStyle="bold"
            android:elevation="4dp"/>

        <TextView
            android:id="@+id/btnOptions"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_button_pill_surface"
            android:gravity="center"
            android:text="START"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:elevation="4dp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <com.example.gamepadtester2.ble.JoystickView
        android:id="@+id/leftJoystick"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rightJoystick"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.example.gamepadtester2.ble.JoystickView
        android:id="@+id/rightJoystick"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toEndOf="@+id/leftJoystick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/notificationContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="bottom|center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/centerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/leftJoystick"
        app:layout_constraintEnd_toStartOf="@id/rightJoystick"
        android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lớp 1: Glow lan tỏa (Outer Glow) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4000B0FF" /> <!-- Xanh dương sáng, độ trong suốt 25% -->
            <corners android:radius="20dp" /> <!-- Bo góc lớn hơn nền chính để tạo độ loe -->
        </shape>
    </item>

    <!-- Lớp 2: Glow đậm sát viền (Inner Glow / Stroke) -->
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#802979FF" /> <!-- Tím xanh, độ trong suốt 50% -->
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Lớp 3: Nền chính (Main Content Background) -->
    <!-- Margin 4dp để lộ 2 lớp glow bên dưới ra ngoài -->
    <item
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <!-- Viền mảnh màu xanh dương đậm để sắc nét -->
            <stroke android:width="2dp" android:color="#2962FF" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
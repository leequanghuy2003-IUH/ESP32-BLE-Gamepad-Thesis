<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lớp đệm trong suốt (Invisible Spacer) -->
    <!-- Mục đích: Giữ chỗ bằng đúng kích thước của lớp Glow để không bị lệch layout -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Trong suốt -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Nền chính (Vị trí y hệt lớp 3 của file Glow) -->
    <item
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#BDBDBD" /> <!-- Viền xám nhẹ bình thường -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>